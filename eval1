def add(dic1,dic2,dic3,dic4):
    book=input("enter name of book you want to add ")
    author=input("enter author")
    isbn=input("enter isbn")
    genre=input("enter genre")
    status=input("availibility-y/n")
    dic1[book]=isbn
    dic2[genre]=isbn
    dic3[author]=isbn
    dic4[status]=isbn
    print(dic1)
    print(dic2)
    print(dic3)
    print(dic4)

